@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model GaCloudServer.STS.Identity.ViewModels.Account.LogoutViewModel

<div class="logout-container">

    <main class="main-content  mt-0">
        <section>
            <div class="page-header min-vh-75">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                            <div class="card card-plain mt-8">
                                <div class="card-header pb-0 text-left bg-transparent">
                                    <h3 class="font-weight-bolder text-dark">@Localizer["Title"]</h3>
                                    <p class="mb-0">@Localizer["Message"]</p>
                                </div>
                                <div class="card-body">
                                    <form asp-route="Logout">
                                        <fieldset>
                                            <input type="hidden" name="logoutId" value="@Model.LogoutId"/>
                                            <div class="text-center">
                                                <button class="btn btn-dark w-100 mt-4 mb-0">@Localizer["Yes"]</button>
                                            </div>
                                        </fieldset>

                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="position:inherit !important;">
                            <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                                <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('/images/custom/9917.jpg')"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

</div>







